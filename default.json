{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "github>aquaproj/aqua-renovate-config"
    ],
    "schedule": [
        "* 21-23 * * fri",
        "* * * * sat-sun"
    ],
    "prHourlyLimit": 0,
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "automergeStrategy": "squash"
        }
    ]
}
